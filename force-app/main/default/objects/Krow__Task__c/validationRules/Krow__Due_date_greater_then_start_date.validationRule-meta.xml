<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Krow__Due_date_greater_then_start_date</fullName>
    <active>true</active>
    <description>Task Due Date should not be less then start date</description>
    <errorConditionFormula>NOT(ISNULL(Krow__Start_Date__c)) &amp;&amp; NOT(ISNULL(Krow__Due_Date__c)) &amp;&amp; (Krow__Start_Date__c &gt; Krow__Due_Date__c)</errorConditionFormula>
    <errorDisplayField>Krow__Due_Date__c</errorDisplayField>
    <errorMessage>Task Due Date should not be less then start date</errorMessage>
</ValidationRule>
